@page "/tbc/{RaidName}"

<div class="table_div">
    <div>
        @if (dataIsLoaded == false)
        {
            <p>Fetching loot data. Please wait...</p>
        }
        @if (dataIsLoaded && RaidTBC != null)
        {
            <table align="right">
                <tr>
                    <td align="right">PRICE <b>2</b></td>
                    <td width="16"><img style="margin: 10px" src="/images/price_two.png" width="20" height="20"></td>
                    <td align="right">PRICE <b>1</b></td>
                    <td width="16"><img style="margin: 10px" src="/images/price_one.png" width="20" height="20"></td>
                    <td align="right">PRICE <b>0</b></td>
                    <td width="16"><img style="margin: 10px" src="/images/price_zero.png" width="20" height="20"></td>
                </tr>
            </table>
            @foreach (var bosses in RaidTBC.Bosses)
            {
                <table class="indextable">
                    <h3>@bosses.Name</h3>
                </table>
                <TableComponentTBC BossTBC=bosses />
            }
        }
    </div>
</div>